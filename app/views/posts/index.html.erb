<div class="container mb-5">
  <div class="row justify-content-center my-5">
    <%= link_to t(".teams_index"), teams_path, class: "btn-lg btn-secondary col-3 text-center" %>
    <%= link_to t(".create_post"), new_post_path, class: "btn-lg btn-secondary col-3 text-center mx-1" %>
    <div class="btn-lg btn-primary col-3 text-center shadow"><%= t(".title") %></div>
  </div>
  
  <div class="col-lg-10 mx-auto">
    <%= render "shared/errors", obj: @comment %>
    <%= render @posts %>
    <%= paginate @posts %>
  </div>
</div>
